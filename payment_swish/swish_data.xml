<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Fields in backoffice -->
        <record id="payment_acquirer_swish" model="payment.acquirer">
            <field name="name">Swish Pay</field>
            <field name="image" type="base64" file="payment_swish/static/src/img/swish_icon.png" />
            <field name="provider">swish</field>
            <field name="company_id" ref="base.main_company" />
            <field name="view_template_id" ref="swish_acquirer_button" />
            <field name="environment">test</field>
            <field name="pre_msg">
                <![CDATA[
                         <p>You will be redirected to the Paypal website after clicking on the payment button.</p>]]>
            </field>
            
            <!-- !!!! Dont know if needed but we want the fields in backoffice !!!!   -->
            <field name="swish_merchant_number" > "ROOT" </field>
            <field name="swish_cert" > "ROOT" </field>
            <field name="swish_key" > "ROOT" </field>
            <field name="swish_verify" > "ROOT" </field>


        </record>
    </data>
</odoo>
